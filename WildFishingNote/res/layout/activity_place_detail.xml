<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		
		<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place_detail_title"
        android:layout_margin="8dp"/>
        
		<com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/placeDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	    bootstrapbutton:be_state="success"/>

	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place_detail_detail"
        android:layout_margin="8dp"/>
        
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/placeDetailDetail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	            bootstrapbutton:be_state="success"
	            android:gravity="left|top"
	       		android:inputType="textMultiLine"/>

	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place_detail_image"
        android:layout_margin="8dp"/>
    <ImageView
        android:id="@+id/placeDetailImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp" />

    
</LinearLayout>
    

</RelativeLayout>
