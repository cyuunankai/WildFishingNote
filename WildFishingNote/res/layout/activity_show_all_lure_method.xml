<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simple.wildfishingnote.ShowAllLureMethodActivity" >

    <ListView
        android:id="@+id/listViewLureMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_above = "@+id/buttonsLayoutShowAllLureMethod">
    </ListView>
    
    <LinearLayout
    android:id="@+id/buttonsLayoutShowAllLureMethod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >
	
		        <com.beardedhen.androidbootstrap.BootstrapButton
	                android:id="@+id/buttonAddLureMethod"
	                android:layout_width="0dp"
	                android:layout_weight="0.5"
	                android:layout_height="wrap_content"
	                android:layout_margin="8dp"
	                android:text="@string/add"
	                android:onClick="buttonAddLureMethodClick"
	                bootstrapbutton:bb_icon_left="fa-floppy-o"
	                bootstrapbutton:bb_roundedCorners="true"
	                bootstrapbutton:bb_type="success" />
	                
	            <com.beardedhen.androidbootstrap.BootstrapButton
	                android:id="@+id/buttonBackToAddPoint"
	                android:layout_width="0dp"
	                android:layout_weight="0.5"
	                android:layout_height="wrap_content"
	                android:layout_margin="8dp"
	                android:text="@string/back"
	                android:onClick="buttonBackToAddPointClick"
	                bootstrapbutton:bb_icon_left="fa-floppy-o"
	                bootstrapbutton:bb_roundedCorners="true"
	                bootstrapbutton:bb_type="success" />
	                

</LinearLayout>

</RelativeLayout>
