<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simple.wildfishingnote.PointDetailActivity" >

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		
		<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rod_length"
        android:layout_margin="8dp"/>
        
		<com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/pointDetailRodLengthName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	    bootstrapbutton:be_state="success"/>

	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lure_method"
        android:layout_margin="8dp"/>
        
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/pointDetailLureMethodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	    bootstrapbutton:be_state="success"/>
	    
	<com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/pointDetailLureMethodDetail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	    bootstrapbutton:be_state="success"
	    android:gravity="left|top"
	    android:inputType="textMultiLine"/>

	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bait"
        android:layout_margin="8dp"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/pointDetailBaitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	    bootstrapbutton:be_state="success"/>
	    
	<com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/pointDetailBaitDetail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	    bootstrapbutton:be_state="success"
	    android:gravity="left|top"
	    android:inputType="textMultiLine"/>
	    
	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/depth"
        android:layout_margin="8dp"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/pointDetailDepth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        bootstrapbutton:be_roundedCorners="true"
	    bootstrapbutton:be_state="success"/>

    
</LinearLayout>

</RelativeLayout>
