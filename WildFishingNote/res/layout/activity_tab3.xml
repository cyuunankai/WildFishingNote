<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addPointRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.apis.app.Tab3Activity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.simple.wildfishingnote.sectionedlistview.SectionListView
            android:id="@+id/listViewPoint"
            android:layout_width="fill_parent"
            android:layout_height="460dp" >
        </com.simple.wildfishingnote.sectionedlistview.SectionListView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonsLayoutCampaignPointEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/buttonSavePoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/save"
            bootstrapbutton:bb_icon_left="fa-floppy-o"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="success" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayoutCampaignPointAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/buttonCampaignPointPre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:text="@string/pre"
            bootstrapbutton:bb_icon_left="fa-undo"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="success" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/buttonCampaignPointNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="0.5"
            android:text="@string/next"
            bootstrapbutton:bb_icon_left="fa-floppy-o"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="success" />
    </LinearLayout>

</RelativeLayout>